<h1>Choose Your Team</h1>

<ul id="create_tifo" class="teams">
  <% @teams.each do |team| %>
    <li>
      <%= link_to tifos_path(tifo: {team_id: team.id, user_id: current_user.id}, format: :json), method: :post, remote: true, disable_with: "Warming up ..." do %>
        <%= team.name %>
      <% end %>
    </li>
  <% end %>
</ul>

<script>
  $(document).ready(function(){

    $('#create_tifo a')
      .bind("ajax:success", function(evt, data, status, xhr){

        window.location.replace('<%= tifos_path %>/' + data["token"]);

      })

      // TODO: Error handling

  });
</script>


