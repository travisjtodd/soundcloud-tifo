<%= form_for(@tifo, url: tifo_path(@tifo.token)) do |f| %>

  <h1>Choose Your Anthem</h1>
  <h2><%= @tifo.team.name %></h2>
  
  <% if @tifo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tifo.errors.count, "error") %> prohibited this tifo from being saved:</h2>

      <ul>
      <% @tifo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :track_id %><br>
    <%= f.collection_select :track_id, @mytracks, :id, :title, prompt: true %>
  </div>

  <div class="actions">
    <%= f.submit "Choose this Anthem" %>
  </div>

<% end %>