 <div class="container" role="welcome"> 
  <header class="row offset-by-six">
    <div class="four columns logo">
      <%= image_tag 'logo-large.png', alt: "Soundcloud Twelfth Man" %>
    </div>
  </header>
  <div class="row offset-by-two">
    <div class="twelve columns">
      <p>
        Mashup your Soundcloud sounds and Instagram photos to create a tifo to support your favorite team in the World Cup.
      </p>
    </div>
  </div>
  <% if current_user %>
    <div class="row offset-by-six">
      <div class="four columns">
        <p>
          <%= link_to "New Tifo", new_tifo_path, :class => 'button' %>
        </p>
      </div>
    </div>
  <% end %>
  <div class="row offset-by-six">
    <div class="four columns connect">
      <% if current_user %>
        <%= link_to image_tag("btn-disconnect-l.png", alt: "Disconnect"), signout_path %>
      <% else %>
        <%= link_to image_tag("btn-connect-l.png", alt: "Connect"), "/auth/soundcloud" %>
      <% end %>
    </div>
  </div>
</div>